{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",
		"types": ["jest"],
		"typeRoots": ["./node_modules/@types"]
	},
	"exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
	"include": ["src/main.ts"]
}
